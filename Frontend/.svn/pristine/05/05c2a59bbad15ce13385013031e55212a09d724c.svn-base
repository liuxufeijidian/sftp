						<input type="text" name="userName" id="userName" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">登录账号</label>
					<label class="input">
						<input type="text" name="loginCode" id="loginCode" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">登录密码</label>
					<label class="input">
						<input type="password" name="loginPwd" id="loginPwd" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">用户类型</label>
					<label class="select">
						<select name="userType"  class="input-xs" required="">
							<option value="1">超级管理员</option>
							<option value="2">普通用户</option>
						</select>
						<i></i>
						<input type="hidden" name="state" value="1">
					</label>
				</section>
				<section>
					<label class="label">用户角色</label>
					<label class="input">
						<select name="roleId" class="input-xs" id="roleId">
						</select>
						<i></i>
					</label>
				</section>
				<section>
					<label class="label">邮箱</label>
					<label class="input">
						<input type="text" name="email" id="email" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">手机号码</label>
					<label class="input">
						<input type="text" name="mobile" id="mobile" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">性别</label>
					<label class="select">
						<select name="sex" class="input-xs" id="sex">
							<option value="1">男</option>
							<option value="2">女</option>
						</select>
						<i></i>
					</label>
				</section>
				
			</fieldset>
		</form>
	</fieldset>
</div>
