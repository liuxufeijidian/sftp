<link rel="stylesheet" type="text/css" href="/components/parsley/parsley.css" />
<link rel="stylesheet" type="text/css" href="/components/select2/select2.css" />
<style>
	.select2-container--default .select2-selection--multiple {
		border-radius : 0		
	}
</style>

<!-- widget grid -->
<section id="widget-grid" class="">
	<!-- row -->
	<div class="row">
		<!-- NEW WIDGET START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<table id="jqgrid"></table>
			<div id="pjqgrid"></div>
		</article>
		<!-- WIDGET END -->
	</div>
	<!-- end row -->
</section>
<div id="addUserWindow" ng-app="userForm" >
	<fieldset>
		<form class="form-inline smart-form" id="addUserForm" data-parsley-validate>
			<fieldset class="mySet" style="padding: 5px 14px 5px !important;background: none">
				<section>
					<label class="label">用户名称</label>
					<label class="input">
						<input type="text" name="userName" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">登录账号</label>
					<label class="input">
						<input type="text" name="loginCode" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">登录密码</label>
					<label class="input">
						<input type="password" name="loginPwd" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">用户类型</label>
					<label class="select">
						<select name="userType"  class="input-xs" required="">
							<option value="1">超级管理员</option>
							<option value="2">普通用户</option>
						</select>
						<i></i>
						<input type="hidden" name="state" value="1">
					</label>
				</section>
				<section ng-controller="departList">
					<label class="label">隶属小区</label>
					<label class="select">
						<select name="departId" class="input-xs" id="departData" style="width: 395px" multiple="">
							<option ng-repeat="type in types" value="{{type.constTypeId}}">{{type.constTypeDesc}}</option>
						</select>
					</label>
				</section>
				<section ng-controller="roleList">
					<label class="label">用户角色</label>
					<label class="select">
						<select name="roleId" class="input-xs" id="roleData">
							<option ng-repeat="role in roles" value="{{role.roleId}}">{{role.roleName}}</option>
						</select>
						<i></i>
					</label>
				</section>
				<section>
					<label class="label">邮箱</label>
					<label class="input">
						<input type="text" name="email" class="input-xs">
					</label>
				</section>
				<section>
					<label class="label">手机号码</label>
					<label class="input">
						<input type="text" name="mobile" class="input-xs" required="">
					</label>
				</section>
				<section>
					<label class="label">性别</label>
					<label class="select">
						<select name="sex" class="input-xs">
							<option value="1">男</option>
							<option value="2">女</option>
						</select>
						<i></i>
					</label>
				</section>
				
			</fieldset>
		</form>
	</fieldset>
</div>
<div id="editUserWindow" >
	<fieldset>
		<form class="form-inline smart-form" id="editUserForm" data-parsley-validate>
			<fieldset class="mySet" style="padding: 5px 14px 5px !important;background: none">
