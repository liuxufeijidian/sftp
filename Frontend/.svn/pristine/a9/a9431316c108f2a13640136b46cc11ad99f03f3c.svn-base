		<script type="text/javascript">
			function getDevice() {
				var userAgentInfo = navigator.userAgent;
				var Agents = ["Android", "MicroMessenger", "iPhone", "SymbianOS", "Windows Phone", "iPad", "iPod"];
				var flag;
				for (var v = 0; v < Agents.length; v++) {
					if (userAgentInfo.indexOf(Agents[v]) > 0) {
						flag = Agents[v];
						break;
					}
				}
				return flag;
			}
			$(function() {
				$(".download").click(function() {
					var device = getDevice();
					if(device == 'Android'){
						window.open("http://yuntu-file-server.oss-cn-beijing.aliyuncs.com/ota/1473326411300.apk");
					} else if(device == "MicroMessenger") {
						alert("请使用右上角菜单在浏览器打开吧！");
					} else if(device == 'iPhone') {
						window.open("https://itunes.apple.com/us/app/tu-wen/id1140778674?l=zh&ls=1&mt=8");
					} else {
						alert(navigator.userAgent);
					}
				});
				$(window).scroll(function(e) {
					if(e.currentTarget.scrollY < 200) {
						$(".fixed-top").fadeOut("slow");
					}
					if(e.currentTarget.scrollY >= 200) {
						$(".fixed-top").fadeIn("slow");
					}
				});
			});
