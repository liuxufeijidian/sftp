<link rel="stylesheet" type="text/css" href="/components/parsley/parsley.css" />
<!-- widget grid -->
<section id="widget-grid" class="">
	<!-- row -->
	<div class="row">
		<!-- NEW WIDGET START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<table id="jqgrid"></table>
			<div id="pjqgrid"></div>
		</article>
		<!-- WIDGET END -->
	</div>
	<!-- end row -->
</section>
<div id="updatePetWindow" style="overflow-x: hidden">
	<form class="smart-form" id="updatePetForm" data-parsley-validate>
		<fieldset>
			<section>
				<label class="label">宠物名</label>
				<label class="input">
					<input type="text" class="input-xs" name="petName" required="">
				</label>
			</section>
			<section>
				<label class="label">宠物年龄</label>
				<label class="input">
					<input type="text" class="input-xs" name="petAge" required=""> 
				</label>
			</section>
			<section>
				<label class="label">宠物类型</label>
				<label class="input">
					<input type="text" class="input-xs" name="petType" required=""> 
				</label>
			</section>
			<section>
				<label class="label">是否具有攻击性</label>
				<label class="select">
					<select class="input-sm" name="isAttack">
						<option value="0">无</option>
						<option value="1">有</option>
					</select> <i></i>
				</label>
			</section>
			<section>
				<label class="label">宠物身体状况</label>
				<label class="input">
					<input type="text" class="input-xs" name="petCondition" required=""> 
				</label>
			</section>
			<section>
				<label class="label">备注</label>
				<label class="input">
					<input type="text" class="input-xs" name="remark">
					<input type="hidden" name="userId" />
					<input type="hidden" name="id" />
				</label>
			</section>
		</fieldset>
	</form>
</div>

<div id="updateUserWindow" style="overflow-x: hidden">
	<form class="smart-form" id="updateUserForm" data-parsley-validate>
		<fieldset>
			<section>
				<label class="label">订单状态</label>
				<label class="select">
					<input type="hidden" name="id" />
					<select class="input-sm" name="orderStatus" required="">
						<option value="2">已支付</option>
						<option value="3">服务结束</option>
						<option value="5">已接单</option>
						<option value="6">已预约</option>
						<option value="7">已取消</option>
						<option value="8">待支付</option>
					</select><i></i>
				</label>
			</section>
			<section>
				<label class="label">洗护项目</label>
				<label class="input">
					<input class="input-sm" name="petItem" required="">
				</label>
			</section>
			<section>
				<label class="label">金额</label>
				<label class="input">
					<input class="input-sm" name="payPrice" required="">
				</label>
			</section>
		</fieldset>
	</form>
</div>

<script type="text/javascript" src="/lib/mod_ajax.js"></script>
<section id="scriptTag"></section>
